@using GameZone.Configurations
@model IEnumerable<GameZone.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a class="btn btn-secondary btn-lg mb-5" asp-action="Create" asp-controller="Games">
    <i class="bi bi-plus-circle"></i>
    Add New Game
</a>


@if (!Model.Any())
{
    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h4 class="alert-heading">No Game</h4>
        <p class="mb-0">No Games were Added Yet...</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var game in Model)
        {
            <div class="col-lg-4 col-mg-6">
                <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id" class="text-decoration-none  card border-success mb-3" style="max-width: 20rem;">
                    @*  <div class="card-header">Header</div> *@
                    <div class="card-body" style="background-image:url(@($"{FileSettings.ImagePath}/{game.Cover}")); background-size:cover;background-position:center;height:400px;">
                    </div>
                    <div class="d-flex flex-column justify-content-center align-items-center p-3">
                        <h4 class="text-light">@game.Name</h4>
                        <h5>@game.Category.Name</h5>
                        <div>
                            @foreach (var device in game.Devices)
                            {
                                <i class="@device.Device.Icon mx-1 fs-4"></i>
                            }
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
